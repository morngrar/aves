<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:key="preference_key"
        android:title="title"
        android:summary="summary" />

    <SwitchPreferenceCompat
        android:key="pref_location"
        android:title="Use location"
        android:summary="Enable location usage"/>

    <SwitchPreferenceCompat
        android:key="pref_haptics"
        android:title="Use haptics"
        android:summary="Enable vibration features"/>

    <SeekBarPreference
        android:key="seekBar"
        android:title="Seek bar example"
        android:max="10"
        android:defaultValue="5" />

</androidx.preference.PreferenceScreen>